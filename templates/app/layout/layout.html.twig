{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
{% endblock %}

{% block body %}
    {% include "dashboard/layout/components/loader.html.twig" %}

    <div class="body">
        <nav>
            <div class="nav-header">
                <div class="nav-header-logo">
                    <img src="{{ asset('build/dashboard/images/logilink-logo.svg') }}" alt="Logo du site">
                </div>
            </div>
            <div class="nav-mobile">
                <span class="icon-menu"></span>
            </div>
            <div class="nav-body">
                <div class="items">
                    {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                        <div class="item">
                            <a href="{{ path('app_logout') }}">
                                <span>Déconnexion</span>
                            </a>
                        </div>
                    {% else %}
                        <div class="item">
                            <a href="{{ path('app_login') }}">
                                <span>Se connecter</span>
                            </a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </nav>

        <main>

            <div>
                {% block main_content %}{% endblock %}
            </div>

            <footer>
                <div class="footer">
                    <div class="footer-menu">
                        <div class="footer-logo">
                            <a href="{{ path('app_homepage') }}" title="Logilink">
                                <img src="{{ asset('build/dashboard/images/logilink-logo.svg') }}" alt="Logo"/>
                            </a>
                            <span>Espace Cité de la Musique de Marseille </span>
                        </div>
                        <div class="footer-items">
                            <a rel="nofollow" href="{{ path('app_homepage') }}">Mentions légales</a>
                            <a rel="nofollow" href="{{ path('app_homepage') }}">Politique de confidentialité</a>
                            <a rel="nofollow" href="{{ path('app_homepage') }}">Gestion des cookies</a>
                            <a rel="nofollow" href="{{ path('app_login') }}">Mon espace</a>
                        </div>
                    </div>
                    <div class="copyright">Copyright 2020 - <a href="https://logilink.fr" target="_blank">Logilink</a></div>
                </div>
            </footer>
        </main>
    </div>
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}