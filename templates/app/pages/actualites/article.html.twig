{% extends 'app/pages/actualites/template.html.twig' %}

{% block title %}{{ article.title }} {{ parent() }}{% endblock %}

{% block main_content %}
    <div class="main-content">
        <div class="read-article">
            <a href="{{ path('app_actualites') }}" class="btn btn-outline-default">
                <span class="icon-left-arrow"></span>
                <span>Retour aux articles</span>
            </a>

            <div class="article">
                <div class="article-title">
                    <h1>{{ article.title }}</h1>
                </div>

                <div class="article-intro">
                    {{ article.introduction | raw }}
                </div>

                <div class="createdAt">
                    {{ article.createAtStringLong }}
                </div>

                {% if article.fileFile %}
                    <div class="article-image">
                        <img src="{{ asset(article.fileFile) }}" alt="Illustration article">
                    </div>
                {% endif %}


                <div class="article-content">
                    {{ article.content | raw }}
                </content>
            </div>
        </div>
    </div>
{% endblock %}